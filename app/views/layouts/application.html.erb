<!DOCTYPE html>

<html>
	<head>
		<link href='https://fonts.googleapis.com/css?family=Roboto+Mono:400,100,700' rel='stylesheet' type='text/css'>
	  <title>Rainforest</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head >
	<body id = "all_text">

		<% if flash[:notice] %>
	      <p id="notice"><%= flash[:notice] %></p>
	    <% end %>
	    <% if flash[:alert] %>
	      <p id="alert"><%= flash[:alert] %></p>
	    <% end %>

		<%= yield %>

		<p class="userinfo">
	      <% if current_user %>
	        Signed in as <%= current_user.name %>. <br><%= link_to "Log out", session_path("current"), :method => :delete %>
	      <% else %>
	        <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
	      <% end %>
	    </p>
	</body>
</html>
